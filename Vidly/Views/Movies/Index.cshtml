@model List<Vidly.Models.Movies>
@{
    ViewBag.Title = "Index";
}

<h1>Movies</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>Movies</th>
        <th>Genre</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Details", "Movies", new {index = movie.Id}, null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
</table>


